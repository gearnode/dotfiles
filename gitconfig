[alias]
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s = status -s
  b = branch -a
  cm = commit
  t = tag --sort version:refname
  f = fetch --prune
  ck = checkout
  pf = push -f
  pr = pull --rebase
  wip = commit -a -m 'save wip'
  bd = branch -d
  bdf = branch -D

[core]
  excludesfile = ~/.gitignore
  editor = /usr/local/bin/vim

[merge]
  log = true

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[rebase]
  stat = true

[user]
  email = bfrimin@student.42.fr
  name = Gearnode

[push]
  default = simple
