[alias]
  b = branch -a
  bd = branch -d
  bdf = branch -D
  br = branch
  ck = checkout
  cm = commit
  d = difftool
  f = fetch --prune --tags
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  pl = pull
  ps = push
  s = status -s
  t = tag --sort version:refname
  wip = commit -a -m 'save wip'
  wtf = "!cat ~/.gitconfig"
  clr = "!git-remove-merged-branch"
  ci = "!hub ci-status"
  rb = "!git checkout master && git pull origin master && git checkout - && git rebase master"

[commit]
  gpgsign = true

[core]
  editor = /usr/local/bin/vim
  excludesfile = ~/.gitignore

[difftool]
  prompt = true

[difftool.vim]
  cmd = vim -d $LOCAL $REMOTE

[diff]
  tool = vim

[merge]
  log = true

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[rebase]
  stat = true

