[alias]
  b = branch -a
  bd = branch -d
  bdf = branch -D
  br = branch
  ck = checkout
  cm = commit
  d = difftool
  f = fetch --prune --tags
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  pl = pull
  ps = push
  s = status -s
  t = tag --sort version:refname
  wip = commit -a -m 'save wip'
  wtf = "!cat ~/.gitconfig"

[core]
  editor = /opt/local/bin/vim
  excludesfile = ~/.gitignore

[difftool]
  prompt = true

[difftool.vim]
  cmd = vim -d $LOCAL $REMOTE

[diff]
  tool = vim

[merge]
  log = true

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[rebase]
  stat = true

[user]
  email = bryan@frimin.fr
  name = Gearnode

[push]
  default = current

[protocol]
  version = 2

# Go package manager sucks
[url "ssh://git@github.com/jobteaser/"]
  insteadOf = https://github.com/jobteaser/

[github]
  user = gearnode
