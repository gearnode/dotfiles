#!/bin/bash

DOTFILES=(
  gemrc
  gitconfig
  gitignore
  zshrc
  tmux.conf
  irbrc
  psqlrc
  curlrc
  agignore
  pg_service.conf
  pryrc
  iex.exs
  gnupg
)

__lnfs() {
  local dotfiles_path=$(pwd -P)
  ln -fs "$dotfiles_path/$1" ~/.$1
}

__do_link() {
  for FILE in ${DOTFILES[@]} ; do
    printf "\033[34m==>\033[0m Linking $FILE\n"
    __lnfs ${FILE}
  done
}

__do_link
